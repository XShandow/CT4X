<?xml version="1.0" encoding="UTF-8"?>
	<project name="CT4X" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>

		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />

		<mkdir dir="externalLibs" />

		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="commons-lang3-3.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="bcprov-jdk15on-154.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="commons-io-2.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="commons-codec-1.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="swxajce-v3.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X\lib">
				<filename name="crypto-v5.jar"/>
			</fileset>
		</copy>

		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="E:\Code\Java\Eclipse_FX\CT4X">
				<include name="src/**" />
			</fileset>
		</copy>

		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />

		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="commons-codec-1.10.jar"/>
				<include name="crypto-v5.jar"/>
				<include name="commons-lang3-3.0.jar"/>
				<include name="bcprov-jdk15on-154.jar"/>
				<include name="commons-io-2.0.jar"/>
				<include name="swxajce-v3.jar"/>
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>

		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="GBK">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>


	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />

		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>


		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="CT4X.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>

		<fx:application id="fxApplication"
			name="CT4X"
			mainClass="com.security.sansec.main.CT4X"
			toolkit="fx"
		/>

		<mkdir dir="build/classes/META-INF" />



		<fx:jar destfile="dist/CT4X.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>

			<manifest>
				<attribute name="Implementation-Vendor" value="sansec.X"/>
				<attribute name="Implementation-Title" value="CT4X"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>


		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="CT4X" nativeBundles="exe"
			updatemode="background" >

			<fx:platform basedir="${java.home}"/>
			<fx:info title="CT4X" vendor="sansec.X"/>

			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>


	</target>
</project>
